#!/bin/sh
echo "Solc Build started"

BUILD_DIR="$1"
CACHE_DIR="$2"

# Add Ethereum PPA
echo "deb http://ppa.launchpad.net/ethereum/ethereum/ubuntu bionic main" > /etc/apt/sources.list.d/ethereum-ubuntu-ethereum-bionic.list
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 2A518C819BE37D2C2031944D1C52189C923F6CA9
apt-get update

# Install solc
apt-get install -y solc

# Check solc version
solc --version
